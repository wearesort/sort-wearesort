/*******************************
         Site Overrides
*******************************/

/*-------------------
 Menu
---------------------*/
.ui.main.menu {
  margin: 0;
  border-radius: 0;
  border: none;
  border-bottom: 1px solid @borderColor;
  box-shadow: none;
}
.secondary.menu {
  display: none !important;
}
.ui.secondary.menu {
  right: 0 !important;
  background-color: @white !important;
  margin-right: 0 !important;
  margin-left: 0 !important;
  .ui.text.container {
    font-size: 1rem;
    .toc.item {
      padding: 2em 1.125em;
    }
    a.item {
      background-color: @white;
    }
  }
}
@media only screen and (max-width: @largestMobileScreen) {
  .ui.main.menu {
    display: none !important;
  }
  .main.menu .item,
  .main.menu .menu {
    display: none;
  }
  .secondary.menu {
    display: block !important;
  }
}

/*-------------------
 Cookie compliance
---------------------*/
.ui.nag {
  color: @teal !important;
  > .container {
    display: flex;
    align-items: center;
    a {
      color: @teal;
    }
    i.icon {
      margin-left: 1em;
    }
  }
  @media only screen and (max-width: @largestMobileScreen) {
    position: static !important;
    top: auto !important;
    margin-top: 5em !important;
  }
}

/*-------------------
 Stripe
---------------------*/


/*-------------------
 Block
---------------------*/
.block {
  padding-top: 4em !important;
  padding-bottom: 4em !important;
  &.centered {
    text-align: center;
  }
  .large-body {
    font-size: 20px;
  }
}

/*-------------------
 Main
---------------------*/
.main {
  margin-top: 4em;
  margin-bottom: 4em;
  @media only screen and (min-width: @largestMobileScreen) {
    min-height: 500px;
  }
}

/*-------------------
 Footer
---------------------*/
@media only screen and (min-width: @largestMobileScreen) {
  .footer.segment {
    padding: 4em 0em !important;
    .column:last-child {
      box-shadow: none !important;
    }
    a {
      i {
        text-decoration: none;
      }
    }
  }
}
